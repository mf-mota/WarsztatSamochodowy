@model WarsztatSamochodowy.Models.AllOwners

@{
    ViewData["Title"] = "My Clients";
}
<h1>@ViewData["Title"]</h1>


<p>&nbsp;</p>
<h7><b>Warning:</b> Only Admins can edit existing Clients!</h7>
<p>&nbsp;</p>


<div class="col-lg-12 col-md-12">
    <table class="table table-dark">
        <thead>
            <tr width=100%>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.ownerList != null && Model.ownerList.Count > 0)
                {
                    foreach (var owner in Model.ownerList)
                    {
                        <tr>
                            <td>@owner.Id</td>
                            <td>@owner.Name</td>
                            <td>@owner.LastName</td>
                            <td>@owner.PhoneNumber</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
    <a href="@Url.Action("CreateOwner", "Owner")" class="btn btn-primary">Create New Client</a>
</div>